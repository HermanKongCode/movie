<!DOCTYPE html>
<html>
  <head>
    <title>Movie</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/footable.core.min.css' />
    <script src="/javascripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="/javascripts/footable.js" type="text/javascript"></script>
	<script src="/javascripts/footable.sort.js" type="text/javascript"></script>
	<meta name="viewport" content="user-scalable=no width=device-width, initial-scale=1">
	<meta name="format-detection" content="telephone=no">
	<meta charset='big5'>
  </head>
  <body>
  	<div class="container-fluid">
	  	<div class="col-xs-12">
	    	<h1><%= heading.heading%></h1>
		</div>
		<div class="col-xs-12">
			<div class="col-xs-6 no-padding"><%= heading.from %> <%= date.from %> <%= heading.to %> <%= date.to %></div>
			<div class="col-xs-6 text-right no-padding"><a href="/?lang=en" style="color:<%= heading.enColor %>">English  </a>&nbsp;&nbsp;|&nbsp;&nbsp; <a href="/?lang=cn" style="color:<%= heading.cnColor %>">ÁπÅ</a></div>
		</div>
	    <div id="movie-gross-table" class="col-xs-12">
		    <table class="table-bordered table-condensed cf table toggle-circle-filled">
		    	<thead>
		    		<th class="text-center" data-sort-initial="true" data-type="numeric" ><%= tableHeading.rank %></th>
		    		<th class="text-center" ><%= tableHeading.title %></th>
		    		<th class="text-center" data-hide="phone"><%= tableHeading.distributor %></th>
		    		<th class="text-center" data-hide="phone"><%= tableHeading.origin %></th>
		    		<th class="text-center" data-hide="phone" data-type="numeric" ><%= tableHeading.releaseDate %></th>
		    		<th class="text-center" data-type="numeric" ><%= tableHeading.gross %></th>
		    		
		    	</thead>
		    	<tbody>
					<% for(var i=0; i < details.length; i++) { %>
				   		<tr class="data-row">
				   			<td class="text-center" data-value="<%= i + 1 %>" data-title="Rank"><%= i + 1 %></td>
				    		<td><%= details[i].movie %></td>
				    		<td><%= details[i].prodCo %></td>
				    		<td><%= details[i].origin %></td>
				    		<td class="text-center" data-value="<%= details[i].unix %>"><%= details[i].releaseDate %></td>
				    		<td class="text-center" data-value="<%= details[i].grossValue %>"><%= details[i].gross %></td>
				   		</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
  </body>
</html>

<script>

$(function() {
  $('table').footable();

	$(".footable tbody tr:odd").addClass("odd");
	$(".footable tbody tr:even").addClass("even");
});

$('table').footable({
  breakpoints: {
    tablet: 1024,
    phone: 620
  }
});

$('td').click(function(e) {
	if($(e.currentTarger).parent().hasClass('footable-row-detail')) {
		if($(e.currentTarger).parent().prev().hasClass('odd')) {
			$(e.currentTarger).parent().css('background-color' , 'rgb(103, 103, 103) !important');
		} else {
			$(e.currentTarger).parent().css('background-color' , '#242424 !important');
		}
	}
});




</script>



